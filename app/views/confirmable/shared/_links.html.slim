- if controller_name != 'sessions'
  = link_to t('devise.sessions.sign_in'), new_session_path(resource_name)
  br/
- if devise_mapping.omniauthable?
  - resource_class.omniauth_providers.each do |provider|
    = link_to t('devise.sessions.sign_in_with_provider', provider: provider.to_s.titleize),
              omniauth_authorize_path(resource_name, provider),
              class: 'btn btn-primary omniauth-button', id: "btn-#{provider.to_s}"
    br/
- if devise_mapping.registerable? && controller_name != 'registrations'
  = link_to t('devise.registrations.sign_up'), new_registration_path(resource_name), class: 'btn btn-primary btn-blue'
  br/
- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
  = link_to t('devise.sessions.forgot_password'), new_password_path(resource_name)
  br/
  br
- if devise_mapping.confirmable? && controller_name != 'confirmations'
  = link_to t('devise.confirmable.didnt_receive_email_confirmation'), new_confirmation_path(resource_name)
  br/
- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
  = link_to t('devise.confirmable.didnt_receive_unlock_instructions'), new_unlock_path(resource_name)
  br/

